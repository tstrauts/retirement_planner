<div class="page-header">
  <h1>
    Scenarios
    <a href="/scenarios/new" class="btn btn-lg btn-success">New Scenario</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Description</th>
        <th>Name</th>

        <th>Actions</th>
      </tr>

      <% @scenarios.each do |scenario| %>
      <% if current_user.id == scenario.user_id %>
      <tr>
        <td><%= scenario.user.name %></td>
        <td><%= scenario.description %></td>
        <td><%= scenario.name %></td>

        <td>
          <a href="/retirement/<%= scenario.id %>" class="btn btn-primary">Run Retirement Calculation</a>
          <a href="/scenarios/<%= scenario.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_scenario/<%= scenario.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
